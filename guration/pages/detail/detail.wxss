}
.comm_down{
  display: inline-block;
  border-left: solid 1px black;
  border-bottom: 1px black solid;
  width: 50rpx;
  height: 50rpx;
  transform: rotate(-45deg);
  position: fixed;
  top: 40vh;
  right: 25rpx;
}
.comm_item{
  width: 100%;
  height: auto;
  border-bottom: 1px black solid;
  padding: 5rpx;
}
